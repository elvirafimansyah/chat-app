  <script>
    var socket = io();
    var form = document.getElementById('form');
    var input = document.getElementById('input');
    var messageUser = document.getElementById("messages");
    // name
      const status = document.querySelector(".status");
      const inputName = document.querySelector(".input-name");
      const btnName = document.getElementById("enter-name");
      form.addEventListener('submit', function (e) {
        e.preventDefault();
        if (input.value) {
          const data = {
            id: socket.id,
            message: input.value
          }
          socket.emit('message', data);
          var item = document.createElement('li');
          item.textContent = input.value;
          messageUser.appendChild(item);
          
          input.value = '';
        }
      });

      socket.on("message", (id, message) => {
        let broadcast = document.createElement("li");
        broadcast.textContent = `*(${id}) pesan: ${message}`;
        broadcast.style.textAlign = "right";
        messageUser.appendChild(broadcast);
      })

      socket.on('connect', () => {
        console.log("user connected");
        let statusP = document.createElement("p");
        statusP.textContent = "user connected";

